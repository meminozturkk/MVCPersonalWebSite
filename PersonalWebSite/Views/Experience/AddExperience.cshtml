
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Add Experience</h2>

<form method="post">

    <input type="text" name="Title" class="form-control" placeholder="Başlığı Yazınız" />
    <br />
    <input type="text" name="Subtitle" class="form-control" placeholder="Alt Başlığı Yazınız" />
    <br />
    <input type="text" name="Date" class="form-control" placeholder="Çalışma Tarihi" />
    <br />
     <textarea placeholder="Açıklama Giriniz" name="Explanation" class="form-control" rows="5"></textarea>
     <br />
    <button class="btn btn-info">Kaydet</button>



</form>