@using PersonalWebSite.Models.Entity
@model List<TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Deneyim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>
            ID
        </th>
        <th>
            Başlık
        </th>
        <th>
            Altbaşlık
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Subtitle</td>
            <td><a href="/Experience/DeleteExperience/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experience/GetExperience/@item.Id" class=" btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>

<td><a href="/Experience/AddExperience/" class="btn btn-primary ">Yeni Deneyim Ekle</a></td>

