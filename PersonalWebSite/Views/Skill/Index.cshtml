@using PersonalWebSite.Models.Entity
@model List<TblSkill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a class="btn btn-info" href="/Skill/NewSkill/">Yeni Yetenek Ekle</a>
                                <div><br /></div>
                                <table class="table table-bordered">
                                    <thead>
                                        
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Task</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <td>Düzenle</td>
                                            <td>Sil</td>

                                        </tr>
                                        
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Rate>=0 && item.Rate<=50)
                                            {
                                                color = "progress-bar bg-danger";
                                            }
                                            else if (item.Rate>=51 && item.Rate<=70)
                                            {
                                                color = "progress-bar bg-warning";
                                            }
                                            else if (item.Rate >= 71 && item.Rate <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                            }
                                            else if (item.Rate >= 85 && item.Rate <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                            }

                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Skill</td>

                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@color" style="width:@item.Rate%"></div>
                                                </div>
                                            </td>

                                            <td><span class="badge bg-danger">@item.Rate%</span></td>
                                            <td>
                                                <a class="btn btn-info btn-sm" href="/Skill/EditSkill/@item.Id">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger btn-sm" href="/Skill/DeleteSkill/@item.Id">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>