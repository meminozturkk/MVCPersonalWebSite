
@using PersonalWebSite.Models.Entity
@model List<TblInterest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobilerim</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="Explanation1">@item.Explanation1</textarea>
        <br />
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="Explanation2">@item.Explanation2</textarea>
    }
    <br />
    <button class="btn btn-info">Güncelle</button>

</form>