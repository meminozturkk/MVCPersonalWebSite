@model PersonalWebSite.Models.Entity.TblEducation
@{
    ViewBag.Title = "AddEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Eğitim</h2>
<br />

<form method="post">


    @Html.Label("Başlık")
    <br />
    @Html.ValidationMessageFor(x => x.Title, "", new { @style = "color:red" })
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Altbaşlık 1")
    <br />
    @Html.ValidationMessageFor(x => x.Subtitle1, "", new { @style = "color:red" })
    @Html.TextBoxFor(x => x.Subtitle1, new { @class = "form-control" })
    <br />
    @Html.Label("Altbaşlık 2")
    @Html.TextBoxFor(x => x.Subtitle2, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.Label("GNO")
    @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
    <br />


    <button class="btn btn-info">Kaydet</button>



</form>

